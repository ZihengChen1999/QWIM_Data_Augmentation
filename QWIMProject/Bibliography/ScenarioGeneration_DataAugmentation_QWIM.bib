  booktitle      = {Proceedings of the 2018 World Wide Web Conference on World Wide Web - WWW '18},
  date           = {2018-04-23},
  title          = {Learning to Collaborate: Multi-Scenario Ranking via Multi-Agent Reinforcement Learning},
